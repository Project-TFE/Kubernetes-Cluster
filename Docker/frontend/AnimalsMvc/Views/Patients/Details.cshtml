@model AnimalsMvc.Models.Patient

@{
    ViewData["Title"] = "Détails du Patient";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-user-circle me-2"></i>@Model.Nom
            </h3>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="info-group">
                        <label class="text-muted mb-1">
                            <i class="fas fa-user text-primary me-2"></i>Nom
                        </label>
                        <p class="h5">@Model.Nom</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-group">
                        <label class="text-muted mb-1">
                            <i class="fas fa-envelope text-info me-2"></i>Email
                        </label>
                        <p class="h5">@Model.Email</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-group">
                        <label class="text-muted mb-1">
                            <i class="fas fa-map-marker-alt text-danger me-2"></i>Adresse
                        </label>
                        <p class="h5">@Model.Adresse</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-group">
                        <label class="text-muted mb-1">
                            <i class="fas fa-phone text-success me-2"></i>Téléphone
                        </label>
                        <p class="h5">@Model.Telephone</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Modifier
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Retour
            </a>
        </div>
    </div>
</div>

@model AnimalsMvc.Models.Patient

@{
    ViewData["Title"] = "Modifier le Patient";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning">
            <h3 class="card-title mb-0">
                <i class="fas fa-user-edit me-2"></i>Modifier le Patient
            </h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nom" class="form-label">
                                <i class="fas fa-user text-primary me-2"></i>Nom
                            </label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope text-info me-2"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Adresse" class="form-label">
                                <i class="fas fa-map-marker-alt text-danger me-2"></i>Adresse
                            </label>
                            <input asp-for="Adresse" class="form-control" />
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Telephone" class="form-label">
                                <i class="fas fa-phone text-success me-2"></i>Téléphone
                            </label>
                            <input asp-for="Telephone" class="form-control" />
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Retour
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

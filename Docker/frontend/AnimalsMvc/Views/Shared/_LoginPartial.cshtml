@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav ">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white btn-primary" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item text-primary" href="/Account/Profile"><i class="fas fa-user me-2"></i>Mon Profil</a></li>
                <li><a class="dropdown-item text-primary" href="/Account/Settings"><i class="fas fa-cog me-2"></i>Paramètres</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="dropdown-item text-danger">
                            <i class="fas fa-sign-out-alt me-2"></i>Déconnexion
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white btn-primary rounded px-3" href="/Account/Login">
                <i class="fas fa-sign-in-alt me-1"></i>Connexion
            </a>
        </li>
        <li class="nav-item ms-2">
            <a class="nav-link text-white  btn-primary rounded px-3" href="/Account/Register">
                <i class="fas fa-user-plus me-1"></i>Inscription
            </a>
        </li>
    </ul>
